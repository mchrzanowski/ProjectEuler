from math import factorial
from time import time

LIMIT = 1000000000

def main():
    start = time()
    solutions = set([])
    factorialMap = {}
    
    for i in xrange(0, 10):
        factorialMap[str(i)] = factorial(i)
    
    for i in xrange(339800000, LIMIT + 1):
        
        sumOfFactorials = sum([factorialMap[char] for char in str(i)])
        
        if i is sumOfFactorials:
            print "FOUND: ", i
            exit()
            solutions.add(i)
        
        if i % 100000 is 0:
            print i
    
    print "Solutions: ", solutions
    print "Number of Solutions: ", len(solutions)
            
    end = time()
    print "Runtime: ", end - start, " seconds."
    

if __name__ == '__main__':
    main()
